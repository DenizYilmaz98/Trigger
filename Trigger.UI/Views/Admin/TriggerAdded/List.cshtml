@{
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";

}
<style>
th
   {
        background-color:#874a4a;
    }
</style>
<a class="btn btn-success" href="/Admin/TriggerAdded/Add">Ekle</a>
<div>
    <table id="dataArea" class="display" width="100%" data-page-length='25'>
        <thead>

            <tr>
                <th>Gönderi</th>
                <th></th>
                <th>Görsel</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
<script>
    function init() {
        var token = localStorage.getItem("token");
        fetch(ApiUrl + 'triggeradded/list', {
            method: 'POST', // or 'PUT'
            headers: {
                'Content-Type': 'application/json',
                'token': token
            }
        })
            .then(response => response.json())
            .then(data => {

                $('#dataArea').DataTable({
                    data: data.list,
                    columns: [
                        { data: 'comment' },
                        { data:'image' },

                        {
                            data: null,
                            render: function (data, type, row) {
                                return "<a class ='tablecard' href='/Admin/TriggerAdded/Detail?id=" + row.id + "'>Detay</a> </br> <==> </br>/ <a href=\"javascript:Delete('" + row.id + "')\">Sil</a>";
                            }
                        }
                    ],
                });
            })
            .catch((error) => {
                console.error('Error:', error);
            });

    }
    function Delete(id) {
        var token = localStorage.getItem("token");
        fetch(ApiUrl+'triggeradded/delete?id=' + id, {
            method: 'POST', // or 'PUT'
            headers: {
                'Content-Type': 'application/json',
                'token': token
            }
        })
            .then(data => {
                document.location.reload();
            })
            .catch((error) => {
                console.error('Error:', error);
            });
    }
   
    $(document).ready(function () {
        init();
    })
</script>
