@{
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";

}
<style>
    table a
   {
        padding:5px;
        color:white;
        border-radius:10px;
        background-color:#745b5b;

    }
    th{
        margin-left:20px;
    }
</style>
<a class="btn btn-success" href="/Admin/TriggerAdded/Add">Ekle</a>
<div>
    <table id="dataArea" class="display" width="100%" data-page-length='25'>
        <thead>

            <tr>
                <th>İsim</th>
                <th>Soy İsim</th>
                <th>Doğum Tarihi</th>
                <th>Okul İsmi</th>
                <th>Bölüm</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Yetenekler</th>
                <th>#</th>
            </tr>
        </thead>
    </table>
</div>
<script>
     function Delete(id) {
        var token = localStorage.getItem("token");
        fetch(ApiUrl + 'triggeradded/delete?id=' + id, {
            method: 'POST', // or 'PUT'
            headers: {
                'Content-Type': 'application/json',
                'token': token
            }
        })
            .then(data => {
                document.location.reload();
            })
            .catch((error) => {
                console.error('Error:', error);
            });
    }

   
    function init() {
        var token = localStorage.getItem("token");
        fetch(ApiUrl + 'triggeradded/list', {
            method: 'POST', // or 'PUT'
            headers: {
                'Content-Type': 'application/json',
                'token': token
            }
        })
            .then(response => response.json())
            .then(data => {

                $('#dataArea').DataTable({
                    data: data.list,
                    columns: [
                        { data: 'firstname' },
                        { data: 'lastname' },
                        { data: 'birthdate' },
                        { data: 'schoolname' },
                        { data: 'schoolstudyname' },
                        { data: 'schoolstarttime' },
                        { data: 'schoolfinishtime' },
                        { data: 'abilities' },

                        {
                            data: null,
                            render: function (data, type, row) {
                                return "<a class ='tablecard' href='/Admin/TriggerAdded/Detail?id=" + row.id + "'>Düzenle</a> </br> <==> </br>/ <a href=\"javascript:Delete('" + row.id + "')\">Sil</a> </br><==> </br><a href='/Admin/TriggerAdded/Detail?id=" + row.id + "'>Detay</a> </br>  ";
                            }
                        }
                    ],
                });
            })
            .catch((error) => {
                console.error('Error:', error);
            });

    }
    $(document).ready(function () {
        init();
    })
</script>
