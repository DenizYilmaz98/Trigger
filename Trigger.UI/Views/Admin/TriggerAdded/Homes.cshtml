@model Guid;
@{
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";
}
<style>
    .box {
        border-radius: 10px;
        width: 500px;
        padding: 10px;
    }

    input {
        border-radius: 10px;
        height: 50px;
        width: 95%;
    }

    .box button {
        border-radius: 5px;
    }

        .box button:hover {
            background-color: orange;
        }
</style>



<div class="box">
    <div>
        <input type="text" placeholder="Haydi Triggerla" id="comment" />
    </div>
    <div class="col-12 mt-10 ">
        <button onclick="javascript:save()">Triggerla</button>
    </div>
</div>
<script>
    var Id = '@Model';
    function save() {
        var comment = $("#comment").val();

        const data = { comment:comment,id:Id };
        var token = localStorage.getItem("token");

        fetch(ApiUrl+'triggeradded/save', {
            method: 'POST', // or 'PUT
            headers: {
                'Content-Type': 'application/json',
                "token": token
            },
            body: JSON.stringify(data),
        })
            .then(response => response.json())
            .then(data => {
                if (data) alert("kayıt başarılı")
                document.location.href = "/Admin/TriggerAdded";

            })
            .catch((error) => {
                console.error('Error:', error);

            });
    }

    </script>
