@model Guid;
@{ 
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";    
}
<style>
    .box {
        border-radius: 10px;
        width: 500px;
        padding: 10px;
    }
     input{
        border-radius:10px;
        height:50px;
        width:95%;
    }
        
    .box button{
        border-radius:5px;
    }
    .box button:hover{
        background-color:orange;
    }
</style>

<div class="box">
    <div>
        <input type="text" placeholder="Haydi Triggerla" id="comment" />
    </div>
    <div class="col-12 mt-10 ">       
        <button onclick="javascript:save()">Triggerla</button>
    </div>
</div>
<div>
    <table id="dataArea" class="display" width="100%" data-page-length='25'>
        <thead>
            <tr>
                <th>Ürün</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
<script>

    function Delete(id) {
        var token = localStorage.getItem("token");
        fetch(ApiUrl + 'triggeradded/delete?id=' + id, {
            method: 'POST', // or 'PUT'
            headers: {
                'Content-Type': 'application/json',
                'token': token
            }
        })
            .then(data => {
                document.location.reload();
            })
            .catch((error) => {
                console.error('Error:', error);
            });
    }
    function init() {
        var token = localStorage.getItem("token");
        fetch(ApiUrl + 'triggeradded/list', {
            method: 'POST', 
            headers: {
                'Content-Type': 'application/json',
                'token': token
            }
        })
            .then(response => response.json())
            .then(data => {


                $('#dataArea').DataTable({
                    data: data.list,
                    columns: [
                        { data: 'comment' },
                        {
                            data: null,
                            render: function (data, type, row) {
                                return "<a href='/Admin/triggeradded/Detail?id=" + row.id + "'>Detay</a> / <a href=\"javascript:Delete('" + row.id + "')\">Sil</a>";
                            }
                        }
                    ],
                });
            })
            .catch((error) => {
                console.error('Error:', error);
            });

    }
    $(document).ready(function () {
        init();
    })
</script>