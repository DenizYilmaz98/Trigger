@{
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";

}
<style>
    table a {
        padding: 10px;
        background-color: burlywood;
        color: white;
        border-radius: 5px;
        background-color: #745b5b;
    }

    th {
        margin-left: 20px;
    }
</style>
<a class="btn btn-success" href="/Admin/DailyComments/Add">Ekle</a>
<div>
    <table id="dataArea" class="display" width="100%" data-page-length='25'>
        <thead>

            <tr>
                <th>Başlık</th>
                <th>Gönderi</th>
               
                <th>#</th>

            </tr>
        </thead>
    </table>
</div>
<script>
    function Delete(id) {
        var token = localStorage.getItem("token");
        fetch(ApiUrl + 'dailycomments/delete?id=' + id, {
            method: 'POST', // or 'PUT'
            headers: {
                'Content-Type': 'application/json',
                'token': token
            }
        })
            .then(data => {
                document.location.reload();
            })
            .catch((error) => {
                console.error('Error:', error);
            });
    }
    function init() {
        var token = localStorage.getItem("token");
        fetch(ApiUrl + 'dailycomments/list', {
            method: 'POST', // or 'PUT'
            headers: {
                'Content-Type': 'application/json',
                'token': token
            }
        })
            .then(response => response.json())
            .then(data => {

                $('#dataArea').DataTable({
                    data: data.list,
                    columns: [
                        { data: 'title' },
                        { data: 'dailyComment' },
                       

                        {
                            data: null,
                            render: function (data, type, row) {
                                return "<a class ='tablecard' href='/Admin/DailyComment/Detail?id=" + row.id + "'>Düzenle</a> </br> </br> <a href=\"javascript:Delete('" + row.id + "')\">Sil</a>";
                            }
                        }
                    ],
                });
            })
            .catch((error) => {
                console.error('Error:', error);
            });
    }
    $(document).ready(function () {
        init();
    })
</script>
