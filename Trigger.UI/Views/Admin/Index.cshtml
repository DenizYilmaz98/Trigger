@{ 
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";    
}
<style>
    .box {
        border-radius: 10px;
        width: 500px;
        padding: 10px;
    }
     input{
        border-radius:10px;
        height:50px;
        width:95%;
    }
        
    .box button{
        border-radius:5px;
    }
    .box button:hover{
        background-color:orange;
    }
</style>

<div class="box">
    <div>
        <input type="text" placeholder="Haydi Triggerla" id="comment" />
    </div>
    <div>       
        <button onclick="javascript:Save()">Triggerla</button>
    </div>
</div>
<script>

    function Save() {
        var comment = $("#comment").val();

        const data = { comment: comment }
        var token = localStorage.getItem("token");

        fetch(ApiUrl + 'TriggerAdded/Save', {
            methods: 'POST',
            headers: {
                'Content-Type': 'application/json',
                "token": token
            },
            body: JSON.stringify(data)
            
        })
            .then(response => response.json())
            .then(data => {
                if (data) alert("Gönderiniz başarılıdır")
                document.location.href = "/Admin/Index";

            })
            .catch((error) => {
                console('Error:', error)
            })
    }
</script>